<odoo>
  <data>
    <!-- ******************** explicit list view definition ******************** -->

    <record model="ir.ui.view" id="agreement.contract_list">
      <field name="name">agreement.contract.list</field>
      <field name="model">agreement.contract</field>
      <field name="arch" type="xml">
        <tree>
          <field name="number"/>
        </tree>
      </field>
    </record>

    <!-- ******************** actions opening views on models ******************** -->

    <record model="ir.actions.act_window" id="agreement.contract_action">
      <field name="name">Договоры</field>
      <field name="res_model">agreement.contract</field>
      <field name="view_mode">tree,form</field>
    </record>




    <!-- Top menu item -->
    <menuitem name="Договоры" id="menu_root" sequence="0"/>

    <!-- menu categories -->
    <menuitem name="Договоры" id="contract_menu" parent="menu_root" action="agreement.contract_action"/>
<!--    <menuitem name="Настройки" id="settings_menu" parent="menu_root" action="agreement.settings_action" groups="agreement.group_manager"/>-->

  </data>
</odoo>